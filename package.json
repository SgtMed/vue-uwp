{
  "name": "vue-uwp",
  "version": "0.1.1",
  "private": false,
  "description": "Vue Components that Implement Microsoft's UWP Design & Fluent Design.",
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "build:file": "node build/bin/build-entry.js",
    "dist": "yarn run clean && yarn run build:file && yarn run lint && webpack --config build/webpack.conf.js && webpack --config build/webpack.common.js && webpack --config build/webpack.component.js",
    "lint": "vue-cli-service lint",
    "docs": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "main": "dist/vue-uwp.js",
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.9",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.9",
    "@vue/cli-service": "^3.0.0-rc.9",
    "@vue/eslint-config-airbnb": "^3.0.0-beta.7",
    "json-templater": "^1.2.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^7.0.3",
    "uppercamelcase": "^3.0.0",
    "vue-template-compiler": "^2.5.16",
    "vuepress": "^0.13.0"
  },
  "files": [
    "components",
    "public"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babyeyeFE/vue-uwp.git"
  },
  "keywords": [
    "vue",
    "vue-components",
    "uwp",
    "microsoft-uwp",
    "microsoft-fluent",
    "uwp-design",
    "fluent",
    "fluent-design",
    "javascript",
    "windows-uwp"
  ],
  "author": "babyeyeFE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/babyeyeFE/vue-uwp/issues"
  },
  "homepage": "https://github.com/babyeyeFE/vue-uwp#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
