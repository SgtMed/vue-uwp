{
  "name": "vue-uwp",
  "version": "0.1.0",
  "private": false,
  "description": "Vue Components that Implement Microsoft's UWP Design & Fluent Design.",

  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.9",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.9",
    "@vue/cli-service": "^3.0.0-rc.9",
    "vue-template-compiler": "^2.5.16"
  },
  "files": [
    "packages",
    "public"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babyeyeFE/vue-uwp.git"
  },
  "keywords": [
    "vue",
    "fluent",
    "design",
    "components",
    "flent design"
  ],
  "author": "babyeyeFE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/babyeyeFE/vue-uwp/issues"
  },
  "homepage": "https://github.com/babyeyeFE/vue-uwp#readme",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}